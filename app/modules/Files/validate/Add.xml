<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/Files/config/validators.xml"
>
	<ae:configuration>
		
		<validators>
		
	      <validator class="string">
	        <arguments>
	          <argument>file_url</argument>
	        </arguments>
	        <errors>
	          <error>Adres pliku jest wymaganym polem</error>
	          <error for="required">Adres pliku jest wymaganym polem.</error>
	          <error for="max_error">Maksymalna długość adresu to 1024 znaków.</error>
	        </errors>
	        <ae:parameters>
	          <ae:parameter name="max">1024</ae:parameter>
	        </ae:parameters>
	      </validator>
		
		</validators>
		
	</ae:configuration>
</ae:configurations>
